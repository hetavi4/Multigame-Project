        btn3=tk.Button(M1_2,text="Oh no, what happened?",font=("Fixedsys",15),width=50,anchor="center",command=talk2)
        btn3.pack(pady=50)

    M1_1.destroy()
    M1_2.create_image( 0, 0, image = bkg2, anchor = "nw")
    frame2=tk.Frame(M1_2,borderwidth=0)
    frame2.pack(pady=100)
    lb2=tk.Label(M1_2,text="Chickpea is screaming",font=("Fixedsys",15),width=50,anchor="center")
    lb2.pack(pady=50)
    lb3=tk.Label(M1_2,image=chick1)
    lb3.pack(pady=25)
    btn2=tk.Button(M1_2,text="Talk to Chickpea",font=("Fixedsys",15),width=50,anchor="center",command=talk)
    btn2.pack(pady=50)

    


frame1=tk.Frame(M1_1,borderwidth=0)
frame1.pack(pady=100)
lb1=tk.Label(M1_1,text="That's Chickpea's house, i wonder what happened",font=("Fixedsys",15),width=50,anchor="center")
