                btn6=tk.Button(M1_2,text="uhhh.. I am Cosplaying?",font=("Fixedsys",15),width=50,anchor="center",command=talk4)
                btn6.pack(pady=0)

            #command - talk2
            lb4.destroy()
            btn3.destroy()
            
            pic1=tk.Label(M1_2,image=chick1)
            pic1.pack(pady=25,anchor="center")

            lb5=tk.Label(M1_2,text="Chickpea points at NOTE left on her kitchen counter.",font=("Fixedsys",15),width=80,anchor="center")
            lb5.pack(pady=5)
            lb6=tk.Label(M1_2,text="I STOLE YOUR BREAD!! YOU WILL NEVER FIND THEM AGAIN!! HAHAHHA!",font=("Fixedsys",20),width=80,anchor="center",fg="white",bg="red")
            lb6.pack(pady=5)
            lb7=tk.Label(M1_2,text="Chickpea: What am i going to sell in my bakery today!!",font=("Fixedsys",15),width=80,anchor="center",fg="brown")
            lb7.pack(pady=5)
            lb8=tk.Label(M1_2,text="Chickpea looks at Tim",font=("Fixedsys",15),width=80,anchor="center")
            lb8.pack(pady=5)
            btn4=tk.Button(M1_2,text="Click to Continue",font=("Fixedsys",15),width=50,anchor="center",command=talk3)
            btn4.pack(pady=25)


        #command - talk
        lb2.destroy()
        lb3.destroy()
        btn2.destroy()
        lb4=tk.Label(M1_2,text="The bread I prepared is all gone!",font=("Fixedsys",15),width=50,anchor="center",fg="brown")
